  <style>
	html, body {
		margin: 0 auto;
		padding: 0;	
		font-family: Arial;
	}
	
	.main-container {
			width: 100%;
			max-width: 100%;
			min-width: 100%;
			display: flex;
			flex-direction: column;
			align-content: center;
			justify-content: center;
	}
  .risk-indicator-triangle {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 30px 15px 0 15px;
    border-color: #007bff transparent transparent transparent;
  }
	
	.section-table{ 
		border-spacing: 0;
	}
	.section-square-element-container {
		vertical-align: top;
  }
  
  .page{ 
    page-break-after: always;
  }
	
	.section {
		display: flex;
		flex-direction: row;
	}
	
	.section-square-element{
		height: 25px;
		margin-top: 7px;
		margin-right: 10px;
		width: 80px;
		min-width: 80px;
		max-width: 80px;
		background-color: #004f9f;
	}
	
	.title-block-risk {
		text-align: center;
	}
	
	.section-title{ 
		margin-top: 0;
	}
	.section-title, .section-subtitle{
		color: #004f9f;
	}
	
    .container-report .section1 .risk-indicator-red {
      height: 30px;
      width: 500px;
      background: #ff0000;
      border: 1px solid #4d4d4d;
    }

    .container-report .section1 .risk-indicator-yellow {
      height: 30px;
      width: 500px;
      background: #ffff00;
      border: 1px solid #4d4d4d;
    }

    .container-report .section1 .risk-indicator-green {
      height: 30px;
      width: 500px;
      background: #00ff00;
      border: 1px solid #4d4d4d;
    }

    .container-report .section2 {
      padding-top: 50px;
    }

    .container-report .section2 .title-table {
      margin-bottom: 10px;
    }

    .container-report .section2 table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    .blue-style {
      background: #004f9f;
    }
	
	.table-header {
		font-weight: normal;
		color: #FFF;
		text-align: center;
		font-size: 1em;
	}
    .container-report .section-inner-table td {
      border-right: 1px solid #FFF;
    }
	
	.table-cell{
		font-size: 11px;
	}

    .container-report .paragraph {
      padding-top: 10px;
      font-size: 0.7em;
    }
  
  .inner-table-odd-even:nth-child(even){ 
    background-color: #F0EFEE;
  }

    .container-report .container-block {
      display: block;
      width: 100%;
      margin-bottom: 20px;
    }

	.title-block-risk{ 
		margin: 10px 0;
		font-weight: bold;
  } 
  .text-title{ 
    font-size: 1.1em;
  }

  .text-bold{
    font-weight: bold;
  }
    .container-report .container-block .container-icon {
      display: inline-block;
      vertical-align: middle;
    }

    .container-report .container-block .container-icon .risk-indicator-red {
      padding-top: 20px;
      font-size: 100px;
      color: #ff0000;
    }

    .container-report .container-block .container-icon .caption {
      font-size: 16px;
      text-align: center;
    }

    .risk-indicator-yellow {
      fill: #F3DB2B;
    }

    .risk-indicator-green {
      fill: #ABC446;
    }

    .risk-indicator-red {
      fill: #DE382C;
    }

    .container-report .container-block .container-icon .risk-indicator-yellow {
      padding-top: 20px;
      font-size: 100px;
      color: #ffff00;
    }

    .container-report .container-block .container-icon .risk-indicator-green {
      padding-top: 20px;
      font-size: 100px;
      color: #00ff00;
    }

    .container-report .general-title {
      margin-top: 20px;
    }

    .container-report .text-margin {
      margin-top: 10px;
      font-size: 0.7em;
    }


